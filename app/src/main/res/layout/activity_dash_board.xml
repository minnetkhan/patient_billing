<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDashBoard">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/Patients"
        android:text="Patients"
        android:onClick="onClickPatients"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/Doctors"
        android:text="Doctors"
        android:onClick="onClickDoctors"
        android:layout_below="@+id/Patients" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/Wards"
        android:text="Wards"
        android:layout_below="@id/Doctors"
        android:onClick="onClickWard"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/Treatments"
        android:text="Treatments"
        android:onClick="onClickTreatment"
        android:layout_below="@id/Wards" />

</RelativeLayout>